<?xml version="1.0"?>
<ruleset name="WordPress Plugin Standards">
    <description>WordPress Plugin Coding Standards</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress"/>

    <!-- Include PHP Compatibility -->
    <rule ref="PHPCompatibility">
        <config name="testVersion" value="7.4-"/>
    </rule>

    <!-- Exclude some rules that are not relevant for plugins -->
    <rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
        <exclude-pattern>*/node_modules/*</exclude-pattern>
        <exclude-pattern>*/vendor/*</exclude-pattern>
    </rule>

    <!-- Allow . in hook names -->
    <rule ref="WordPress.NamingConventions.ValidHookName">
        <properties>
            <property name="additionalWordDelimiters" value="."/>
        </properties>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <!-- Exclude paths -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/assets/js/dist/*</exclude-pattern>
    <exclude-pattern>*/assets/css/dist/*</exclude-pattern>

    <!-- Include all files in the plugin -->
    <file>.</file>

    <!-- Show progress -->
    <arg value="p"/>
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Show source codes in all reports -->
    <arg value="n"/>
</ruleset> 